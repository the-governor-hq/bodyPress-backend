{
  "name": "bodypress-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "BodyPress API backend with wearables OAuth, Prisma, and background sync jobs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/worker.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@prisma/client": "^7.4.0",
    "@the-governor-hq/constitution-core": "file:../constitution/packages/core",
    "@the-governor-hq/wearable-sdk": "file:../wearable-sdk",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg-boss": "^10.1.6",
    "pino": "^9.11.0",
    "pino-http": "^10.5.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.17.2",
    "@types/passport-jwt": "^4.0.1",
    "prisma": "^7.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}